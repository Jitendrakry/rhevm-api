<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
           jaxb:version="2.1" jaxb:extensionBindingPrefixes="xjc">

  <xs:annotation>
    <xs:appinfo>
      <jaxb:globalBindings generateIsSetMethod="true"/>
    </xs:appinfo>
  </xs:annotation>

  <!-- Links -->

  <xs:element name="link" type="Link"/>

  <xs:complexType name="Link">
    <xs:sequence/>
    <xs:attribute name="href" type="xs:string"/>
    <xs:attribute name="rel" type="xs:string"/>
  </xs:complexType>

  <!-- API -->

  <xs:element name="api" type="API"/>

  <xs:complexType name="API">
    <xs:sequence>
      <xs:element ref="link" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Links"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element ref="summary"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="summary" type="ApiSummary"/>

  <xs:complexType name="ApiSummary">
    <xs:sequence>
      <xs:element ref="vms" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="VMs"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element ref="hosts" minOccurs="0" maxOccurs="1"/>
      <xs:element ref="users" minOccurs="0" maxOccurs="1"/>
      <xs:element ref="storage_domains" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Faults -->

  <xs:element name="fault" type="Fault"/>

  <xs:complexType name="Fault">
    <xs:sequence>
      <xs:element name="reason" type="xs:string"/>
      <xs:element name="detail" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Actions -->

  <xs:complexType name="GracePeriod">
    <xs:sequence>
      <xs:element name="expiry" type="xs:long"/>
      <xs:element name="absolute" type="xs:boolean" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="IscsiParameters">
    <xs:sequence>
      <xs:group ref="IscsiTarget"/>
    </xs:sequence>
  </xs:complexType>

  <xs:group name="ActionParameterGroup">
    <xs:sequence>
      <xs:element name="grace_period" type="GracePeriod" minOccurs="0"/>
      <!-- for StorageDomain teardown and VM migrate actions -->
      <xs:element name="host" type="Host" minOccurs="0"/>
      <!-- for host NIC attach action -->
      <xs:element name="network" type="Network" minOccurs="0"/>
      <!-- when installing a host, a root password is required -->
      <xs:element name="root_password" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <!-- for VM ticket actions -->
      <xs:element name="ticket" type="Ticket" minOccurs="0"/>
      <!-- for Host ISCSI actions -->
      <xs:element name="iscsi" type="IscsiParameters" minOccurs="0"/>
      <!-- for VM import and export actions -->
      <xs:element name="storage_domain" type="StorageDomain" minOccurs="0"/>
      <!-- for VM import action -->
      <xs:element name="cluster" type="Cluster" minOccurs="0"/>
      <!-- for VM export action -->
      <xs:element name="discard_snapshots" type="xs:boolean" minOccurs="0"/>
      <xs:element name="exclusive" type="xs:boolean" minOccurs="0"/>
      <!-- ... etc., explicitly enumerate all the parameter types -->
    </xs:sequence>
  </xs:group>

  <xs:group name="ActionResponseGroup">
    <xs:sequence>
      <!-- for Host ISCSI discovery action -->
      <xs:element name="iscsi_target" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="IscsiTargets"/>
          </xs:appinfo>
        </xs:annotation>
      <!-- ... etc., explicitly enumerate all the response types -->
      </xs:element>
    </xs:sequence>
  </xs:group>

  <!-- Represents a potentially asynchronous operation -->
  <!-- Use an anonymous complex type as opposed to an instance of a defined
       type, to force JAXB to decorate generated class with @XmlRootElement -->
  <xs:element name="action">
    <xs:complexType>
      <xs:sequence>
       <!-- The following are used by the client
            when initiating an operation -->
          <xs:element name="async" type="xs:boolean" minOccurs="0"/>
          <!-- action-specific parameter(s) for the operation (if required) -->
          <xs:group ref="ActionParameterGroup"/>

        <!-- The following, and the href/id attributes are used by the
             server when responding to an operation or status query -->
          <xs:element name="status" type="Status" minOccurs="0"/>
          <!-- Link to original action (rel="replay") or parent resource (rel="parent") -->
          <xs:element ref="link" minOccurs="1" maxOccurs="unbounded"/>
          <!-- Fault describing failure case -->
          <xs:element ref="fault" minOccurs="0" maxOccurs="1"/>
          <!-- action-specific response(s) for the operation (if required) -->
          <xs:group ref="ActionResponseGroup"/>
      </xs:sequence>
      <xs:attribute name="href" type="xs:string"/>
      <xs:attribute name="id" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="Status">
    <xs:restriction base="xs:string">
      <xs:enumeration value="PENDING"/>
      <xs:enumeration value="IN_PROGRESS"/>
      <xs:enumeration value="COMPLETE"/>
      <xs:enumeration value="FAILED"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="Actions">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
            <jaxb:property name="Links"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element ref="link" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Enums -->

  <xs:simpleType name="BootDevice">
    <xs:restriction base="xs:string">
      <xs:enumeration value="cdrom"/>
      <xs:enumeration value="hd"/>
      <xs:enumeration value="network"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DiskType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="DATA"/>
      <xs:enumeration value="SHARED"/>
      <xs:enumeration value="SWAP"/>
      <xs:enumeration value="SYSTEM"/>
      <xs:enumeration value="TEMP"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DiskFormat">
    <xs:restriction base="xs:string">
      <xs:enumeration value="COW"/>
      <xs:enumeration value="RAW"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DiskInterface">
    <xs:restriction base="xs:string">
      <xs:enumeration value="IDE"/>
      <xs:enumeration value="SCSI"/>
      <xs:enumeration value="VIRTIO"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DiskStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ILLEGAL"/>
      <xs:enumeration value="INVALID"/>
      <xs:enumeration value="LOCKED"/>
      <xs:enumeration value="OK"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="HostStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="DOWN"/>
      <xs:enumeration value="ERROR"/>
      <xs:enumeration value="INITIALIZING"/>
      <xs:enumeration value="INSTALLING"/>
      <xs:enumeration value="INSTALL_FAILED"/>
      <xs:enumeration value="MAINTENANCE"/>
      <xs:enumeration value="NON_OPERATIONAL"/>
      <xs:enumeration value="NON_RESPONSIVE"/>
      <xs:enumeration value="PENDING_APPROVAL"/>
      <xs:enumeration value="PREPARING_FOR_MAINTENANCE"/>
      <xs:enumeration value="PROBLEMATIC"/>
      <xs:enumeration value="REBOOT"/>
      <xs:enumeration value="UNASSIGNED"/>
      <xs:enumeration value="UP"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="NicType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="E1000"/>
      <xs:enumeration value="PV"/>
      <xs:enumeration value="RTL8139"/>
      <xs:enumeration value="RTL8139_PV"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="NetworkStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="OPERATIONAL"/>
      <xs:enumeration value="NON_OPERATIONAL"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="StorageDomainType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="DATA"/>
      <xs:enumeration value="ISO"/>
      <xs:enumeration value="EXPORT"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="StorageDomainStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ACTIVE"/>
      <xs:enumeration value="INACTIVE"/>
      <xs:enumeration value="LOCKED"/>
      <xs:enumeration value="MIXED"/>
      <xs:enumeration value="UNATTACHED"/>
      <xs:enumeration value="TORNDOWN"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="StorageType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ISCSI"/>
      <xs:enumeration value="FCP"/>
      <xs:enumeration value="NFS"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="TemplateStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ILLEGAL"/>
      <xs:enumeration value="LOCKED"/>
      <xs:enumeration value="OK"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VmType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="DESKTOP"/>
      <xs:enumeration value="SERVER"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VmStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="UNASSIGNED"/>
      <xs:enumeration value="DOWN"/>
      <xs:enumeration value="UP"/>
      <xs:enumeration value="POWERING_UP"/>
      <xs:enumeration value="POWERED_DOWN"/>
      <xs:enumeration value="PAUSED"/>
      <xs:enumeration value="MIGRATING_FROM"/>
      <xs:enumeration value="MIGRATING_TO"/>
      <xs:enumeration value="UNKNOWN"/>
      <xs:enumeration value="NOT_RESPONDING"/>
      <xs:enumeration value="WAIT_FOR_LAUNCH"/>
      <xs:enumeration value="REBOOT_IN_PROGRESS"/>
      <xs:enumeration value="SAVING_STATE"/>
      <xs:enumeration value="RESTORING_STATE"/>
      <xs:enumeration value="SUSPENDED"/>
      <xs:enumeration value="IMAGE_ILLEGAL"/>
      <xs:enumeration value="IMAGE_LOCKED"/>
      <xs:enumeration value="POWERING_DOWN"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DataCenterStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="UNINITIALIZED"/>
      <xs:enumeration value="UP"/>
      <xs:enumeration value="MAINTENANCE"/>
      <xs:enumeration value="NOT_OPERATIONAL"/>
      <xs:enumeration value="PROBLEMATIC"/>
      <xs:enumeration value="CONTEND"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="FileType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ISO"/>
      <xs:enumeration value="VFD"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- CPUs -->

  <xs:element name="cpu" type="CPU"/>

  <xs:complexType name="CpuTopology">
    <xs:attribute name="sockets" type="xs:int"/>
    <xs:attribute name="cores" type="xs:int"/>
  </xs:complexType>

  <xs:complexType name="CPU">
    <xs:sequence>
      <xs:element name="topology" type="CpuTopology" minOccurs="0"/>
      <xs:element name="level" type="xs:int" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="id" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="CPUs">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
            <jaxb:property name="CPUs"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element ref="cpu" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Version numbers -->

  <xs:complexType name="Version">
    <xs:sequence/>
    <xs:attribute name="major" type="xs:unsignedShort"/>
    <xs:attribute name="minor" type="xs:unsignedShort"/>
  </xs:complexType>

  <xs:complexType name="SupportedVersions">
    <xs:sequence>
      <xs:element name="version" type="Version" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Versions"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <!-- Capabilities -->

  <xs:element name="capabilities" type="Capabilities"/>

  <xs:complexType name="VersionCaps">
    <xs:complexContent>
      <xs:extension base="Version">
        <xs:sequence>
          <xs:element name="current" type="xs:boolean" minOccurs="0"/>
          <xs:element name="cpus" type="CPUs" minOccurs="0">
            <xs:annotation>
              <xs:appinfo>
                <jaxb:property name="CPUs"/>
              </xs:appinfo>
            </xs:annotation>
          </xs:element>
          <xs:element name="permits" type="Permits" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Capabilities">
    <xs:sequence>
      <xs:element name="version" type="VersionCaps" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Versions"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <!-- Common to all resources -->

  <xs:complexType name="BaseResource">
    <xs:sequence>
      <xs:element name="name" type="xs:string" minOccurs="0"/>
      <xs:element name="description" type="xs:string" minOccurs="0"/>
      <xs:element name="actions" type="Actions" minOccurs="0"/>
      <!-- link relation types may be defined by specific resources -->
      <xs:element ref="link" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Links"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="href" type="xs:string"/>
    <xs:attribute name="id" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="BaseResources">
    <xs:sequence>
      <xs:element name="total" type="xs:unsignedInt" minOccurs="0"/>
      <xs:element name="active" type="xs:unsignedInt" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Data Centers -->

  <xs:element name="data_center" type="DataCenter"/>

  <xs:element name="data_centers" type="DataCenters"/>

  <xs:complexType name="DataCenter">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="storage_type" type="StorageType" minOccurs="0"/>
          <xs:element name="version" type="Version" minOccurs="0"/>
          <xs:element name="supported_versions" type="SupportedVersions" minOccurs="0"/>
          <xs:element name="status" type="DataCenterStatus" minOccurs="0"/>
          <!-- also rel="files" and rel="storagedomains" links -->
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="DataCenters">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="DataCenters"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="data_center" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- Clusters -->

  <xs:element name="cluster" type="Cluster"/>

  <xs:element name="clusters" type="Clusters"/>

  <xs:complexType name="Cluster">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element ref="cpu" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="data_center" minOccurs="0" maxOccurs="1"/>
          <xs:element name="version" type="Version" minOccurs="0"/>
          <xs:element name="supported_versions" type="SupportedVersions" minOccurs="0"/>
          <!-- Also a rel="networks" link -->
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Clusters">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
              <jaxb:property name="Clusters"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="cluster" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- Hosts -->

  <xs:element name="host" type="Host"/>

  <xs:element name="hosts" type="Hosts"/>

  <xs:complexType name="Host">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="address" type="xs:string" minOccurs="0"/>
          <xs:element name="status" type="HostStatus" minOccurs="0"/>
          <xs:element name="cluster" type="Cluster" minOccurs="0"/>
          <!-- unsigned to avoid issues with port values greater than 32767,
               e.g. the standard VDSM port 54321 -->
          <xs:element name="port" type="xs:unsignedShort" minOccurs="0"/>
          <xs:element name="version" type="Version" minOccurs="0"/>
          <!-- when creating a new host, a root password is required, but
               this is not subsequently included in the representation -->
          <xs:element name="root_password" type="xs:string" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Hosts">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Hosts"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="host" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- Users & Roles -->

  <xs:element name="permit" type="Permit"/>

  <xs:element name="permits" type="Permits"/>

  <xs:complexType name="Permit">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="administrative" type="xs:boolean" maxOccurs="1"/>
          <xs:element name="role" type="Role" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Permits">
    <xs:sequence>
      <xs:element name="permit" type="Permit" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Permits"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="role" type="Role"/>

  <xs:element name="roles" type="Roles"/>

  <xs:complexType name="Role">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="mutable" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
          <xs:element name="administrative" type="xs:boolean" minOccurs="0" maxOccurs="1"/>

          <xs:element name="user" type="User" minOccurs="0" maxOccurs="1"/>
          <!-- used only to represent the initial set of permits for a
               new role, therafter modification of this permit set is
               only supported via the rel="permits" sub-collection -->
          <xs:element name="permits" type="Permits" minOccurs="0" maxOccurs="1"/>
          <!-- also rel="permits" links, see Permits above -->
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Roles">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Roles"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="role" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="user" type="User"/>

  <xs:element name="users" type="Users"/>

  <xs:complexType name="User">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="domain" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <xs:element name="department" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <xs:element name="logged_in" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
          <xs:element name="last_name" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <!-- generally name@domain -->
          <xs:element name="user_name" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <xs:element name="email" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <!-- used only to represent the initial role assignments for a
               new user, therafter modification of role assignments are
               only supported via the rel="roles" sub-collection -->
          <xs:element name="roles" type="Roles" minOccurs="0" maxOccurs="1"/>
          <xs:element name="groups" minOccurs="0">
            <xs:complexType>
              <xs:sequence>
                <xs:annotation>
                  <xs:appinfo>
                    <jaxb:property name="Groups"/>
                  </xs:appinfo>
                </xs:annotation>
                <xs:element name="group" type="xs:string" maxOccurs="unbounded"/>
              </xs:sequence>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Users">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Users"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="user" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="permission" type="Permission"/>

  <xs:element name="permissions" type="Permissions"/>

  <xs:complexType name="Permission">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="user" type="User" minOccurs="0" maxOccurs="1"/>
          <xs:element name="role" type="Role" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="vm" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Permissions">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Permissions"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="permission" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- Files (ISO or VFD files) -->

  <xs:element name="file" type="File"/>

  <xs:element name="files" type="Files"/>

  <xs:complexType name="File">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="type" type="FileType" minOccurs="0"/>
          <xs:element ref="data_center" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Files">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Files"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="file" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- Networks -->

  <xs:element name="ip" type="IP"/>

  <xs:complexType name="IP">
    <xs:attribute name="address" type="xs:string"/>
