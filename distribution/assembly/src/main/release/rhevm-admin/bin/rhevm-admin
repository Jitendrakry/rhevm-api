#!/bin/sh

DIRNAME=`dirname $0`
if [ "x$RHEVM_API_URL" = "x" ]; then
  RHEVM_API_URL=http://localhost:8080/rhevm-api-mock
fi
if [ "x$RHEVM_USERNAME" = "x" ]; then
  RHEVM_USERNAME=
fi
if [ "x$RHEVM_PASSWORD" = "x" ]; then
  RHEVM_PASSWORD=
fi
if [ "x$RHEVM_TRUSTSTORE_PATH" = "x" ]; then
  RHEVM_TRUSTSTORE_PATH=
fi
if [ "x$RHEVM_TRUSTSTORE_PASSWORD" = "x" ]; then
  RHEVM_TRUSTSTORE_PASSWORD=
fi
export JAVA_OPTS="-Drhevm.base.url=$RHEVM_API_URL -Drhevm.auth.username=$RHEVM_USERNAME -Drhevm.auth.password=$RHEVM_PASSWORD -Drhevm.truststore.path=$RHEVM_TRUSTSTORE_PATH -Drhevm.truststore.password=$RHEVM_TRUSTSTORE_PASSWORD"
$DIRNAME/karaf $@
